# ============================================================================
# UDPspeeder 服务端环境变量配置
# ============================================================================
# 复制为 .env 并修改配置
# ============================================================================

# 运行模式
MODE=server

# 用户权限配置
PUID=1000
PGID=1000
UMASK=022

# 网络配置
LOCAL_ADDR=0.0.0.0
LOCAL_PORT=29900
REMOTE_ADDR=127.0.0.1
REMOTE_PORT=7777

# FEC 参数 (格式: x:y)
FEC_PARAMS=20:10

# 认证密码
PASSWORD=your_secure_password_here

# 工作模式 (0=省流量, 1=低延迟)
WORK_MODE=0

# FEC 超时 (毫秒)
TIMEOUT=8

# 高级参数
MTU=1250
QUEUE_LEN=200
INTERVAL=0
JITTER=0

# 状态报告 (秒, 0=关闭)
REPORT=10

# 是否禁用混淆 (0=启用, 1=禁用)
DISABLE_OBSCURE=0

# 额外参数
EXTRA_ARGS=

# 持久化目录
CONFIG_DIR=/opt/udp-speeder/config
LOG_DIR=/opt/udp-speeder/logs

# 时区
TZ=Asia/Shanghai
