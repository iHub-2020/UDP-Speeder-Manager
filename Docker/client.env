# ============================================================================
# UDPspeeder 客户端环境变量配置
# ============================================================================
# 复制为 .env 并修改配置
# ============================================================================

# 运行模式
MODE=client

# 用户权限配置
PUID=1000
PGID=1000
UMASK=022

# 网络配置
LOCAL_ADDR=0.0.0.0
LOCAL_PORT=3333
REMOTE_ADDR=44.55.66.77
REMOTE_PORT=29900

# FEC 参数 (必须与服务端一致)
FEC_PARAMS=20:10

# 认证密码 (必须与服务端一致)
PASSWORD=your_secure_password_here

# 工作模式 (0=省流量, 1=低延迟)
WORK_MODE=0

# FEC 超时 (毫秒)
TIMEOUT=8

# 高级参数
MTU=1250
QUEUE_LEN=200
INTERVAL=0
JITTER=0

# 状态报告 (秒, 0=关闭)
REPORT=10

# 是否禁用混淆 (0=启用, 1=禁用)
DISABLE_OBSCURE=0

# 额外参数
EXTRA_ARGS=

# 持久化目录
CONFIG_DIR=/opt/udp-speeder/config
LOG_DIR=/opt/udp-speeder/logs

# 时区
TZ=Asia/Shanghai
